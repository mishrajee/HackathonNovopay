<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_name_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="news_item"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_upvotes_view"
        android:layout_below="@+id/news_name_view"
        android:text="news upvotes"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/favourite_button"
        android:layout_alignTop="@+id/news_name_view"
        android:background="@drawable/favourite_button"/>


</RelativeLayout>