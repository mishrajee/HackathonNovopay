<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/news_name_view"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="#242424"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="news_item"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_upvotes_view"
        android:textSize="14sp"
        android:textColor="#777777"
        android:layout_margin="5dp"
        android:layout_below="@+id/news_name_view"
        android:text="news upvotes"/>
    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/favourite_button"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:background="@drawable/favourite_button"
        android:layout_centerVertical="true"
        android:onClick="myFavouriteButtonClickHandler"/>


</RelativeLayout>